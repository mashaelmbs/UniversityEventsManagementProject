@model UniversityEventsManagement.Models.Club
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = "تعديل النادي";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <a href="/Clubs" class="btn btn-outline-secondary mb-3">
                <i class="fas fa-arrow-right"></i> العودة إلى قائمة الأندية
            </a>
            <h1 class="mb-2"><i class="fas fa-edit"></i> تعديل النادي</h1>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">بيانات النادي</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="ClubID" />
                        <input type="hidden" asp-for="AdminUserID" />
                        <input type="hidden" asp-for="CreatedDate" />
                        
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="mb-3">
                            <label asp-for="ClubName" class="form-label">اسم النادي <span class="text-danger">*</span></label>
                            <input asp-for="ClubName" class="form-control" placeholder="أدخل اسم النادي" required />
                            <span asp-validation-for="ClubName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">الوصف <span class="text-danger">*</span></label>
                            <textarea asp-for="Description" class="form-control" rows="5" placeholder="أدخل وصف النادي وأهدافه" required></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="LogoUrl" class="form-label">رابط الشعار (اختياري)</label>
                            <input asp-for="LogoUrl" class="form-control" type="url" placeholder="https://example.com/logo.png" />
                            <small class="form-text text-muted">يمكنك إدخال رابط صورة الشعار</small>
                            @if (!string.IsNullOrEmpty(Model.LogoUrl))
                            {
                                <div class="mt-2">
                                    <img src="@Model.LogoUrl" alt="شعار النادي" style="max-width: 200px; max-height: 200px; border-radius: 8px; margin-top: 10px;" />
                                </div>
                            }
                            <span asp-validation-for="LogoUrl" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" asp-for="IsActive" id="IsActive" />
                                <label class="form-check-label" for="IsActive">
                                    <strong>النادي نشط</strong>
                                </label>
                            </div>
                            <small class="form-text text-muted">عند إلغاء التفعيل، لن يتمكن الطلاب من رؤية النادي أو الانضمام إليه</small>
                        </div>

                        <div class="mt-4">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> حفظ التغييرات
                            </button>
                            <a href="/Clubs/Details/@Model.ClubID" class="btn btn-secondary">
                                <i class="fas fa-eye"></i> عرض التفاصيل
                            </a>
                            <a href="/Clubs" class="btn btn-outline-secondary">
                                <i class="fas fa-times"></i> إلغاء
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-info-circle"></i> معلومات النادي</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <strong>منشئ النادي:</strong><br />
                        <span class="text-muted">@Model.AdminUser?.FirstName @Model.AdminUser?.LastName</span>
                    </div>
                    <div class="mb-3">
                        <strong>تاريخ الإنشاء:</strong><br />
                        <span class="text-muted">@Model.CreatedDate.ToString("dd MMMM yyyy")</span>
                    </div>
                    <div class="mb-3">
                        <strong>عدد الأعضاء:</strong><br />
                        <span class="text-muted">@(Model.Members?.Count ?? 0) عضو</span>
                    </div>
                    <div class="mb-3">
                        <strong>الحالة الحالية:</strong><br />
                        @if (Model.IsActive)
                        {
                            <span class="badge bg-success">نشط</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">غير نشط</span>
                        }
                    </div>
                </div>
            </div>

            <div class="card mt-3">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-lightbulb"></i> نصائح</h5>
                </div>
                <div class="card-body">
                    <ul class="text-muted small mb-0">
                        <li>تأكد من تحديث الوصف بشكل دقيق</li>
                        <li>يمكنك تعطيل النادي مؤقتاً بدلاً من حذفه</li>
                        <li>تأكد من صحة رابط الشعار إذا قمت بتحديثه</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

