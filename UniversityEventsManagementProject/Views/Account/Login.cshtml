@using UniversityEventsManagement.Controllers
@using Microsoft.AspNetCore.Mvc.Localization
@model LoginViewModel
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["LoginTitle"];
}

@section Styles {
    <style>
        .login-icon-wrapper {
            display: inline-block;
            padding: 20px;
            background: linear-gradient(135deg, #66B2FF 0%, #4A90E2 100%);
            border-radius: 50%;
            box-shadow: 0 4px 15px rgba(102, 178, 255, 0.3);
            transition: all 0.3s ease;
            margin-bottom: 10px;
        }

        .login-icon-wrapper:hover {
            transform: translateY(-5px) scale(1.05);
            box-shadow: 0 6px 20px rgba(102, 178, 255, 0.4);
        }

        .login-icon {
            color: white;
            font-size: 3rem;
            display: block;
        }

        /* Responsive icon styles */
        @@media (max-width: 768px) {
            .login-icon-wrapper {
                padding: 15px;
            }

            .login-icon {
                font-size: 2.5rem;
            }
        }

        @@media (max-width: 576px) {
            .login-icon-wrapper {
                padding: 12px;
            }

            .login-icon {
                font-size: 2rem;
            }
        }

        /* Ensure button icon matches theme */
        .btn-primary {
            background: linear-gradient(135deg, #6F4E37 0%, #A67C52 100%);
            border: none;
        }

        .btn-primary:hover {
            background: linear-gradient(135deg, #5a3e2a 0%, #8b6340 100%);
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(111, 78, 55, 0.4);
        }
    </style>
}

<!-- Toast Container for Success/Error Messages -->
<div class="toast-container position-fixed top-0 end-0 p-3" style="z-index: 1056;">
    <div id="loginToast" class="toast" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="toast-header">
            <i id="toastIcon" class="fas me-2"></i>
            <strong id="toastTitle" class="me-auto"></strong>
            <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
        <div id="toastBody" class="toast-body"></div>
    </div>
</div>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card mt-5">
                <div class="card-body p-5">
                    <div class="text-center mb-4">
                        <div class="login-icon-wrapper">
                            <i class="fas fa-sign-in-alt login-icon"></i>
                        </div>
                        <h2 class="mt-3">@Localizer["LoginTitle"]</h2>
                    </div>

                    <form method="post" asp-action="Login" id="loginForm">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" id="validationSummary"></div>

                        <input type="hidden" asp-for="UserType" value="Student" />

                        <div class="mb-3">
                            <label class="form-label">@Localizer["EmailOrUniversityID"]</label>
                            <input asp-for="Email" type="text" class="form-control" placeholder="@Localizer["EmailOrUniversityIDPlaceholder"]" required>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label">@Localizer["Password"]</label>
                            <input asp-for="Password" type="password" class="form-control" placeholder="@Localizer["PasswordPlaceholder"]" required>
                            <span asp-validation-for="Password" class="text-danger"></span>
                            <div class="text-end mt-2">
                                <a href="/Account/ForgotPassword" class="text-decoration-none small">
                                    <i class="fas fa-question-circle"></i> نسيت كلمة المرور؟
                                </a>
                            </div>
                        </div>

                        <div class="mb-3 form-check">
                            <input asp-for="RememberMe" type="checkbox" class="form-check-input">
                            <label asp-for="RememberMe" class="form-check-label">@Localizer["RememberMe"]</label>
                        </div>

                        <button type="submit" class="btn btn-primary btn-lg w-100 mb-3">
                            <i class="fas fa-sign-in-alt"></i> @Localizer["LoginButton"]
                        </button>

                        <div class="text-center">
                            <p class="text-muted mb-2">
                                @Localizer["NoAccount"] 
                                <a href="/Account/Register">@Localizer["CreateNewAccount"]</a>
                            </p>
                            <p class="text-muted">
                                <a href="#">@Localizer["ForgotPassword"]</a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        // Localized strings for JavaScript
        const localizedStrings = {
            success: '@Html.Raw(Localizer["Success"])',
            error: '@Html.Raw(Localizer["Error"])',
            warning: '@Html.Raw(Localizer["Warning"])',
            loginError: '@Html.Raw(Localizer["LoginError"])'
        };

        // Suppress browser extension errors that don't affect functionality
        window.addEventListener('error', function(e) {
            if (e.message && (
                e.message.includes('translations') || 
                e.message.includes('runtime.lastError') ||
                e.message.includes('Receiving end does not exist')
            )) {
                e.preventDefault();
                return true;
            }
        }, true);

        // Handle unhandled promise rejections
        window.addEventListener('unhandledrejection', function(e) {
            if (e.reason && (
                e.reason.message && (
                    e.reason.message.includes('translations') ||
                    e.reason.message.includes('runtime.lastError')
                )
            )) {
                e.preventDefault();
                return true;
            }
        });

        // Function to show toast message
        function showToast(title, message, type) {
            const toastEl = document.getElementById('loginToast');
            const toastIcon = document.getElementById('toastIcon');
            const toastTitle = document.getElementById('toastTitle');
            const toastBody = document.getElementById('toastBody');
            
            // Set icon and color based on type
            if (type === 'success') {
                toastIcon.className = 'fas fa-check-circle text-success me-2';
                toastTitle.textContent = title || localizedStrings.success;
                toastEl.className = 'toast border-success';
            } else if (type === 'error') {
                toastIcon.className = 'fas fa-exclamation-circle text-danger me-2';
                toastTitle.textContent = title || localizedStrings.error;
                toastEl.className = 'toast border-danger';
            } else {
                toastIcon.className = 'fas fa-info-circle text-info me-2';
                toastTitle.textContent = title || localizedStrings.warning;
                toastEl.className = 'toast border-info';
            }
            
            toastBody.textContent = message;
            
            // Show toast using Bootstrap 5
            const toast = new bootstrap.Toast(toastEl, {
                autohide: true,
                delay: type === 'success' ? 3000 : 5000
            });
            toast.show();
        }

        // Check for TempData messages and show toast
        @if (TempData["Success"] != null)
        {
            <text>
            $(document).ready(function() {
                showToast(localizedStrings.success, '@Html.Raw(TempData["Success"])', 'success');
            });
            </text>
        }
        
        @if (TempData["Error"] != null)
        {
            <text>
            $(document).ready(function() {
                showToast(localizedStrings.error, '@Html.Raw(TempData["Error"])', 'error');
            });
            </text>
        }

        // Show toast on form validation errors
        $(document).ready(function() {
            $('#loginForm').on('submit', function(e) {
                // Check if there are validation errors
                const validationSummary = $('#validationSummary');
                if (validationSummary.is(':visible') && validationSummary.text().trim() !== '') {
                    const errorText = validationSummary.text().trim();
                    showToast(localizedStrings.loginError, errorText, 'error');
                }
            });

            // Show toast when page loads if there are model errors
            @if (!ViewData.ModelState.IsValid && ViewData.ModelState.ErrorCount > 0)
            {
                var firstError = ViewData.ModelState.Values.FirstOrDefault(v => v.Errors.Count > 0)?.Errors.FirstOrDefault()?.ErrorMessage;
                if (!string.IsNullOrEmpty(firstError))
                {
                    <text>
                    showToast(localizedStrings.loginError, '@Html.Raw(firstError)', 'error');
                    </text>
                }
            }
        });
    </script>
}
