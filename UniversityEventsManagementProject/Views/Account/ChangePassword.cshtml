@model UniversityEventsManagement.Controllers.ChangePasswordViewModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["ChangePassword"];
    if (User.IsInRole("Admin"))
    {
        Layout = "~/Views/Shared/_AdminLayout.cshtml";
    }
}

<div class="container">
    <div class="row mb-4">
        <div class="col-12">
            <h1><i class="fas fa-lock"></i> @Localizer["ChangePassword"]</h1>
            <p class="text-muted">@Localizer["ChangePasswordDescription"]</p>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-6">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <form asp-action="ChangePassword" method="post">
                        @Html.AntiForgeryToken()
                        <div class="mb-3">
                            <label class="form-label">@Localizer["CurrentPassword"]</label>
                            <input asp-for="OldPassword" class="form-control" type="password" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">@Localizer["NewPassword"]</label>
                            <input asp-for="NewPassword" class="form-control" type="password" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">@Localizer["ConfirmNewPassword"]</label>
                            <input asp-for="ConfirmPassword" class="form-control" type="password" />
                        </div>
                        <div class="d-flex justify-content-between">
                            <a href="/Account/Manage" class="btn btn-light">@Localizer["BackToProfile"]</a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> @Localizer["SaveChange"]
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

