@model List<UniversityEventsManagement.Models.Event>
@using Microsoft.Extensions.Localization
@using UniversityEventsManagement.Resources
@inject IStringLocalizer<SharedResources> Localizer
@{
    ViewData["Title"] = Localizer["SendNotification"];
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <div class="row mb-4">
        <div class="col-12">
            <h1><i class="fas fa-bell"></i> @Localizer["SendNotificationsTitle"]</h1>
            <p class="text-muted">@Localizer["SendNotificationsDescription"]</p>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    <form asp-action="SendNotificationsConfirm" method="post">
                        @Html.AntiForgeryToken()

                        <div class="mb-3">
                            <label class="form-label">@Localizer["NotificationText"]</label>
                            <textarea name="message" class="form-control" rows="5" placeholder="@Localizer["NotificationTextPlaceholder"]" required></textarea>
                            <div class="form-text">@Localizer["NotificationTextHint"]</div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">@Localizer["LinkNotificationToEvent"]</label>
                            <select name="eventId" class="form-select">
                                <option value="">@Localizer["NoEventLink"]</option>
                                @foreach (var evt in (Model ?? Enumerable.Empty<UniversityEventsManagement.Models.Event>()).OrderByDescending(e => e.EventDate))
                                {
                                    <option value="@evt.EventID">
                                        @evt.Title - @evt.EventDate.ToString("dd/MM/yyyy")
                                    </option>
                                }
                            </select>
                        </div>

                        <div class="d-flex justify-content-end">
                            <button type="submit" class="btn btn-primary px-4">
                                <i class="fas fa-paper-plane"></i> @Localizer["SendNotificationButton"]
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-4 mt-4 mt-lg-0">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <h5 class="mb-3">@Localizer["EffectiveNotificationTips"]</h5>
                    <ul class="list-unstyled">
                        <li class="mb-2"><i class="fas fa-check text-success"></i> @Localizer["Tip1"]</li>
                        <li class="mb-2"><i class="fas fa-check text-success"></i> @Localizer["Tip2"]</li>
                        <li class="mb-2"><i class="fas fa-check text-success"></i> @Localizer["Tip3"]</li>
                        <li class="mb-2"><i class="fas fa-check text-success"></i> @Localizer["Tip4"]</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

