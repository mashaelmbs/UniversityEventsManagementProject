@model UniversityEventsManagement.Controllers.CreateUserViewModel
@using Microsoft.Extensions.Localization
@using UniversityEventsManagement.Resources
@inject IStringLocalizer<SharedResources> Localizer
@{
    ViewData["Title"] = "إنشاء مستخدم جديد";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <a href="/Admin/ManageUsers" class="btn btn-outline-secondary mb-3">
                <i class="fas fa-arrow-right"></i> @Localizer["BackToUsersList"]
            </a>
            <h1 class="mb-2"><i class="fas fa-user-plus"></i> إنشاء مستخدم جديد</h1>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">بيانات المستخدم</h5>
                </div>
                <div class="card-body">
                    <form asp-action="CreateUser" method="post">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="FirstName" class="form-label">@Localizer["FirstName"] <span class="text-danger">*</span></label>
                                <input asp-for="FirstName" class="form-control" required />
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="LastName" class="form-label">@Localizer["FamilyName"] <span class="text-danger">*</span></label>
                                <input asp-for="LastName" class="form-control" required />
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Email" class="form-label">@Localizer["Email"] <span class="text-danger">*</span></label>
                                <input asp-for="Email" class="form-control" type="email" required />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="UniversityID" class="form-label">@Localizer["UniversityID"]</label>
                                <input asp-for="UniversityID" class="form-control" />
                                <span asp-validation-for="UniversityID" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="PhoneNumber" class="form-label">@Localizer["PhoneNumber"]</label>
                                <input asp-for="PhoneNumber" class="form-control" />
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Department" class="form-label">@Localizer["DepartmentLabel"]</label>
                                <input asp-for="Department" class="form-control" />
                                <span asp-validation-for="Department" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="UserType" class="form-label">@Localizer["UserType"] <span class="text-danger">*</span></label>
                                <select asp-for="UserType" class="form-select" required>
                                    <option value="">-- اختر نوع المستخدم --</option>
                                    <option value="Student">@Localizer["Student"]</option>
                                    <option value="Admin">@Localizer["Administrator"]</option>
                                </select>
                                <span asp-validation-for="UserType" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Password" class="form-label">كلمة المرور <span class="text-danger">*</span></label>
                                <input asp-for="Password" class="form-control" type="password" required />
                                <span asp-validation-for="Password" class="text-danger"></span>
                                <small class="form-text text-muted">يجب أن تكون كلمة المرور 6 أحرف على الأقل</small>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="ConfirmPassword" class="form-label">تأكيد كلمة المرور <span class="text-danger">*</span></label>
                                <input asp-for="ConfirmPassword" class="form-control" type="password" required />
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mt-4">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> إنشاء المستخدم
                            </button>
                            <a href="/Admin/ManageUsers" class="btn btn-secondary">
                                <i class="fas fa-times"></i> @Localizer["Cancel"]
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

