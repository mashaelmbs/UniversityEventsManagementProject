@model List<UniversityEventsManagement.Models.Attendance>
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["MyAttendanceTitle"];
    if (User.IsInRole("Admin"))
    {
        Layout = "~/Views/Shared/_AdminLayout.cshtml";
    }
}

<div class="container">
    <div class="row mb-4">
        <div class="col-12">
            <h1><i class="fas fa-check-circle"></i> @Localizer["MyAttendanceTitle"]</h1>
            <p class="text-muted">@Localizer["ViewAllAttendedEvents"]</p>
        </div>
    </div>

    @if (Model == null || Model.Count == 0)
    {
        <div class="alert alert-info">
            <i class="fas fa-info-circle"></i> @Localizer["NoAttendedEventsYet"]
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5><i class="fas fa-list"></i> @Localizer["EventsIAttended"]</h5>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th style="text-align: right;">@Localizer["EventName"]</th>
                                    <th style="text-align: right;">@Localizer["DateAndTime"]</th>
                                    <th style="text-align: right;">@Localizer["Location"]</th>
                                    <th style="text-align: right;">@Localizer["CheckInTime"]</th>
                                    <th style="text-align: right;">@Localizer["VolunteerHours"]</th>
                                    <th style="text-align: center;">@Localizer["Actions"]</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var attendance in Model)
                                {
                                    <tr>
                                        <td style="text-align: right;">
                                            <strong>@attendance.Event?.Title</strong>
                                        </td>
                                        <td style="text-align: right;">
                                            @attendance.Event?.EventDate.ToString("dd/MM/yyyy HH:mm")
                                        </td>
                                        <td style="text-align: right;">
                                            <small class="text-muted">@attendance.Event?.Venue</small>
                                        </td>
                                        <td style="text-align: right;">
                                            @attendance.CheckInTime.ToString("dd/MM/yyyy HH:mm")
                                        </td>
                                        <td style="text-align: right;">
                                            <span class="badge bg-success">@attendance.Event?.VolunteerHours @Localizer["Hours"]</span>
                                        </td>
                                        <td style="text-align: center;">
                                            <a href="/Events/Details/@attendance.EventID" class="btn btn-sm btn-outline-primary">
                                                <i class="fas fa-eye"></i> @Localizer["View"]
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <div class="row mt-4">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h5><i class="fas fa-chart-bar"></i> @Localizer["AttendanceStatistics"]</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <p class="mb-1">
                                <strong>@Localizer["TotalAttendedEvents"]:</strong>
                                <span class="badge bg-primary">@Model.Count</span>
                            </p>
                        </div>
                        <div class="mb-3">
                            <p class="mb-1">
                                <strong>@Localizer["TotalVolunteerHoursStats"]:</strong>
                                <span class="badge bg-success">@Model.Sum(a => a.Event?.VolunteerHours ?? 0) @Localizer["Hours"]</span>
                            </p>
                        </div>
                        <div class="mb-3">
                            <p class="mb-1">
                                <strong>@Localizer["LastAttendance"]:</strong>
                                <span class="badge bg-info">@Model.OrderByDescending(a => a.CheckInTime).FirstOrDefault()?.CheckInTime.ToString("dd/MM/yyyy")</span>
                            </p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h5><i class="fas fa-info-circle"></i> @Localizer["ImportantInformation"]</h5>
                    </div>
                    <div class="card-body">
                        <ul class="list-unstyled">
                            <li class="mb-2">
                                <i class="fas fa-check text-success"></i>
                                <strong>@Localizer["VolunteerHours"]:</strong> @Localizer["VolunteerHoursAutoAdded"]
                            </li>
                            <li class="mb-2">
                                <i class="fas fa-certificate text-warning"></i>
                                <strong>@Localizer["Certificates"]:</strong> @Localizer["CertificatesForAttendeesOnly"]
                            </li>
                            <li class="mb-2">
                                <i class="fas fa-star text-info"></i>
                                <strong>@Localizer["Ratings"]:</strong> @Localizer["CanRateEventAfterAttendance"]
                            </li>
                            <li class="mb-2">
                                <i class="fas fa-bell text-primary"></i>
                                <strong>@Localizer["NewNotifications"]:</strong> @Localizer["WillReceiveNotifications"]
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    }

    <div class="row mt-4">
        <div class="col-12">
            <a href="/Home/Dashboard" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-right"></i> @Localizer["BackToDashboard"]
            </a>
        </div>
    </div>
</div>
