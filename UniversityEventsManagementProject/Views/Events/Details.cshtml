@model UniversityEventsManagement.Models.Event
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["EventDetails"];
    if (User.IsInRole("Admin"))
    {
        Layout = "~/Views/Shared/_AdminLayout.cshtml";
    }
}

<div class="container">
    <div class="row">
        <div class="col-md-8">
            <div class="card mb-4">
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <img src="@Model.ImageUrl" class="card-img-top" alt="@Model.Title" style="height: 400px; object-fit: cover;">
                }
                else
                {
                    <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 400px;">
                        <i class="fas fa-image fa-5x text-muted"></i>
                    </div>
                }
                <div class="card-body">
                    <h1 class="card-title">@Model.Title</h1>
                    
                    <div class="mb-4">
                        <span class="badge bg-info">@Model.EventType</span>
                        <span class="badge bg-success">@Model.VolunteerHours @Localizer["VolunteerHoursText"]</span>
                        @if (Model.IsApproved)
                        {
                            <span class="badge bg-success">@Localizer["Confirmed"]</span>
                        }
                        else
                        {
                            <span class="badge bg-warning">@Localizer["PendingApproval"]</span>
                        }
                    </div>

                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h5><i class="fas fa-calendar"></i> @Localizer["DateAndTime"]</h5>
                            <p>@Model.EventDate.ToString("dddd, dd MMMM yyyy HH:mm")</p>
                        </div>
                        <div class="col-md-6">
                            <h5><i class="fas fa-map-marker-alt"></i> @Localizer["Location"]</h5>
                            <p>@Model.Venue</p>
                        </div>
                    </div>

                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h5><i class="fas fa-users"></i> @Localizer["MaximumCapacity"]</h5>
                            <p>@(Model.Registrations?.Count(r => r.Status == "Confirmed") ?? 0) / @Model.MaxCapacity @Localizer["Seats"]</p>
                            <div class="progress">
                                <div class="progress-bar" style="width: @((Model.Registrations.Count(r => r.Status == "Confirmed") * 100) / Model.MaxCapacity)%"></div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <h5><i class="fas fa-hourglass-end"></i> @Localizer["Waitlist"]</h5>
                            <p>@Model.Registrations.Count(r => r.Status == "Waitlist") @Localizer["People"]</p>
                        </div>
                    </div>

                    <div class="mb-4">
                        <h5><i class="fas fa-info-circle"></i> @Localizer["Description"]</h5>
                        <p>@Html.Raw(Model.Description)</p>
                    </div>

                    <div class="mb-4">
                        <h5><i class="fas fa-user"></i> @Localizer["EventOrganizer"]</h5>
                        <p>@Model.CreatedByUser?.FirstName @Model.CreatedByUser?.LastName</p>
                    </div>

                    @* إخفاء زر التسجيل عن الأدمن لأنه هو منشئ الفعالية *@
                    @if (!User.IsInRole("Admin"))
                    {
                    @if (User.Identity?.IsAuthenticated ?? false)
                    {
                        <div class="mb-4">
                            @{
                                var userRegistration = Model.Registrations.FirstOrDefault(r => r.UserID == User.FindFirstValue(System.Security.Claims.ClaimTypes.NameIdentifier));
                            }
                            
                            @if (userRegistration == null)
                            {
                                <form method="post" asp-action="Register" asp-controller="Registrations">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="eventId" value="@Model.EventID">
                                    <button type="submit" class="btn btn-success btn-lg">
                                        <i class="fas fa-check"></i> @Localizer["RegisterNow"]
                                    </button>
                                </form>
                            }
                            else
                            {
                                <div class="alert alert-info">
                                    <i class="fas fa-check-circle"></i> 
                                    @Localizer["YouAreRegistered"] - @Localizer["Status"]: <strong>@userRegistration.Status</strong>
                                </div>
                                
                                @* زر تسجيل الحضور للطالب المسجل *@
                                @if (userRegistration.Status == "Confirmed")
                                {
                                    @if (Model.EventDate <= DateTime.Now && Model.EventDate.AddHours(1).AddMinutes(30) >= DateTime.Now)
                                    {
                                        <a href="/Attendance/CheckIn?eventId=@Model.EventID" class="btn btn-success btn-lg mb-2 w-100">
                                            <i class="fas fa-qrcode"></i> @Localizer["CheckInAttendance"]
                                        </a>
                                    }
                                    else if (Model.EventDate > DateTime.Now)
                                    {
                                        <div class="alert alert-secondary mb-2">
                                            <i class="fas fa-clock"></i> @Localizer["AttendanceAvailableOnEventDay"]
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="alert alert-warning mb-2">
                                            <i class="fas fa-exclamation-triangle"></i> @Localizer["AttendanceDeadlinePassed"]
                                        </div>
                                    }
                                }

                                @if (Model.EventDate > DateTime.Now)
                                {
                                    <form method="post" asp-action="CancelRegistration" asp-controller="Registrations">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="registrationId" value="@userRegistration.RegistrationID">
                                        <button type="submit" class="btn btn-danger" onclick="return confirm('@Localizer["ConfirmCancelRegistration"]')">
                                            <i class="fas fa-times"></i> @Localizer["CancelRegistration"]
                                        </button>
                                    </form>
                                }
                            }
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning">
                            <i class="fas fa-sign-in-alt"></i> 
                            <a href="/Account/Login">@Localizer["Login"]</a> @Localizer["ToRegisterInEvent"]
                        </div>
                        }
                    }
                </div>
            </div>

            @if (Model.Feedbacks != null && Model.Feedbacks.Any())
            {
                <div class="card">
                    <div class="card-header">
                        <h5><i class="fas fa-star"></i> @Localizer["Ratings"] (@Model.Feedbacks.Count)</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <h6>@Localizer["AverageRating"]: <strong>@Model.Feedbacks.Average(f => f.Rating):F1</strong> / 5</h6>
                        </div>
                        @foreach (var feedback in Model.Feedbacks.OrderByDescending(f => f.SubmittedDate).Take(5))
                        {
                            <div class="mb-3 pb-3 border-bottom">
                                <div class="d-flex justify-content-between">
                                    <strong>@feedback.User?.FirstName @feedback.User?.LastName</strong>
                                    <small class="text-muted">@feedback.SubmittedDate.ToString("dd/MM/yyyy")</small>
                                </div>
                                <div class="mb-2">
                                    @for (int i = 0; i < feedback.Rating; i++)
                                    {
                                        <i class="fas fa-star text-warning"></i>
                                    }
                                    @for (int i = feedback.Rating; i < 5; i++)
                                    {
                                        <i class="far fa-star text-warning"></i>
                                    }
                                </div>
                                <p>@feedback.Comment</p>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>

        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-header">
                    <h5><i class="fas fa-tools"></i> @Localizer["Actions"]</h5>
                </div>
                <div class="card-body">
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-action="Edit" asp-controller="Events" asp-route-id="@Model.EventID" class="btn btn-warning btn-sm w-100 mb-2">
                            <i class="fas fa-edit"></i> @Localizer["Edit"]
                        </a>
                        <a asp-action="GenerateEventQR" asp-controller="Admin" asp-route-eventId="@Model.EventID" class="btn btn-success btn-sm w-100 mb-2">
                            <i class="fas fa-qrcode"></i> @Localizer["GenerateQRForAttendance"]
                        </a>
                        <a asp-action="EventStatistics" asp-controller="Admin" asp-route-eventId="@Model.EventID" class="btn btn-info btn-sm w-100 mb-2">
                            <i class="fas fa-chart-bar"></i> @Localizer["Statistics"]
                        </a>
                        <a asp-action="ViewAttendance" asp-controller="Admin" asp-route-eventId="@Model.EventID" class="btn btn-primary btn-sm w-100 mb-2">
                            <i class="fas fa-list"></i> @Localizer["Attendance"]
                        </a>
                        <a asp-action="ViewEventFeedback" asp-controller="Feedback" asp-route-eventId="@Model.EventID" class="btn btn-secondary btn-sm w-100 mb-2">
                            <i class="fas fa-comments"></i> @Localizer["Ratings"]
                        </a>
                        <a asp-action="Delete" asp-controller="Events" asp-route-id="@Model.EventID" class="btn btn-danger btn-sm w-100">
                            <i class="fas fa-trash"></i> @Localizer["Delete"]
                        </a>
                    }
                    else if (User.Identity?.IsAuthenticated ?? false)
                    {
                        @* Show feedback button only if user attended the event *@
                        @if (ViewBag.UserAttended == true)
                        {
                            var userId = User.FindFirstValue(System.Security.Claims.ClaimTypes.NameIdentifier);
                            var existingFeedback = Model.Feedbacks?.FirstOrDefault(f => f.UserID == userId);
                            @if (existingFeedback == null)
                            {
                                <a asp-action="Create" asp-controller="Feedback" asp-route-eventId="@Model.EventID" class="btn btn-primary btn-sm w-100 mb-2">
                                    <i class="fas fa-star"></i> @Localizer["AddRating"]
                                </a>
                            }
                            else
                            {
                                <div class="alert alert-info mb-2">
                                    <i class="fas fa-check-circle"></i> @Localizer["YouHaveRatedThisEvent"]
                                </div>
                            }
                        }
                    }
                </div>
            </div>

            <div class="card">
                <div class="card-header">
                    <h5><i class="fas fa-info-circle"></i> @Localizer["AdditionalInfo"]</h5>
                </div>
                <div class="card-body">
                    <p><strong>@Localizer["EventType"]:</strong> @Model.EventType</p>
                    <p><strong>@Localizer["VolunteerHours"]:</strong> @Model.VolunteerHours</p>
                    <p><strong>@Localizer["CreatedDate"]:</strong> @Model.CreatedDate.ToString("dd/MM/yyyy")</p>
                    <p><strong>@Localizer["TotalRegistrations"]:</strong> @Model.Registrations.Count</p>
                </div>
            </div>
        </div>
    </div>
</div>
