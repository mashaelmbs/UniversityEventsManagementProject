@model UniversityEventsManagement.Models.Event
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["DeleteEvent"];
    if (User.IsInRole("Admin"))
    {
        Layout = "~/Views/Shared/_AdminLayout.cshtml";
    }
}

<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow-sm">
                <div class="card-header bg-danger text-white">
                    <h3 class="mb-0"><i class="fas fa-exclamation-triangle"></i> @Localizer["DeleteEvent"]</h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-circle"></i> <strong>@Localizer["Warning"]</strong>
                        <p class="mb-0 mt-2">@Localizer["DeleteEventWarning"]</p>
                    </div>

                    <div class="mb-4">
                        <h5>@Localizer["EventDetails"]</h5>
                        <hr>
                        <dl class="row">
                            <dt class="col-sm-4">@Localizer["EventName"]:</dt>
                            <dd class="col-sm-8"><strong>@Model.Title</strong></dd>

                            <dt class="col-sm-4">@Localizer["DateAndTime"]:</dt>
                            <dd class="col-sm-8">@Model.EventDate.ToString("dd/MM/yyyy HH:mm")</dd>

                            <dt class="col-sm-4">@Localizer["Location"]:</dt>
                            <dd class="col-sm-8">@Model.Venue</dd>

                            <dt class="col-sm-4">@Localizer["EventType"]:</dt>
                            <dd class="col-sm-8">
                                <span class="badge bg-info">@Model.EventType</span>
                            </dd>

                            <dt class="col-sm-4">@Localizer["MaximumCapacity"]:</dt>
                            <dd class="col-sm-8">@Model.MaxCapacity</dd>

                            <dt class="col-sm-4">@Localizer["VolunteerHours"]:</dt>
                            <dd class="col-sm-8">@Model.VolunteerHours</dd>
                        </dl>
                    </div>

                    <form asp-action="Delete" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="EventID" />
                        
                        <div class="d-flex gap-2 justify-content-end">
                            <a asp-action="Details" asp-route-id="@Model.EventID" class="btn btn-secondary">
                                <i class="fas fa-times"></i> @Localizer["Cancel"]
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash"></i> @Localizer["ConfirmDelete"]
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

